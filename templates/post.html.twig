<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}New post{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% include 'header.html.twig' %}
            <h4>
                Title: {{ post.title }}
                {% if app.user and app.user.id == post.author.id %}
                    <a href="{{ path('blog_post_update', {id: post.id}) }}">Edit</a>
                {% endif %}
            </h4>
            Body: {{ post.body }}<br>
        {% endblock %}
    </body>
</html>

